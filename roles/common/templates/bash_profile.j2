# .bash_profile

# User specific environment and startup programs

PATH=$PATH:$HOME/bin

export PATH

export PYTHONPATH=$PYTHONPATH:{{ project_root }}

source {{ env_dir }}/bin/activate

alias ls='ls -rtlh --color=auto'

export PS1='\n\e[32;48;1m\w\e[0m \e[31;48;1m\A \j job(s) \e[0m \n\e[35;48;1m$LOGNAME user on {{ inventory_hostname }}\e[0m \e[0;32;1m $(__git_ps1 "%s") \e[m \n $ '